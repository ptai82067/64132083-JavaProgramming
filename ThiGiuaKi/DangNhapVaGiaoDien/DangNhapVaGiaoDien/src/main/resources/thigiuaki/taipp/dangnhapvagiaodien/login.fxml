<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="thigiuaki.taipp.dangnhapvagiaodien.LoginController" alignment="center" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 20px;">
    <Label text="Đăng Nhập" style="-fx-font-size: 24px; -fx-text-fill: #333333;"/>
    <TextField fx:id="username" promptText="Tên đăng nhập" style="-fx-font-size: 18px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 10px;"/>
    <PasswordField fx:id="password" promptText="Mật khẩu" style="-fx-font-size: 18px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 10px;"/>
    <Button text="Đăng Nhập" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-border-radius: 5px;"/>
</VBox>
